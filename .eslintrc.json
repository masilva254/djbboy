{
  "extends": [
    "next",
    "next/core-web-vitals",
    "eslint:recommended"
  ],
  "rules": {
    "no-unused-vars": "warn",
    "react-hooks/exhaustive-deps": "off",
    "@next/next/no-img-element": "off",
    "react/react-in-jsx-scope": "off",
    "no-undef": "off",
    "@typescript-eslint/no-unused-vars": "warn"
  },
  "settings": {
    "next": {
      "rootDir": ["app/", "components/", "lib/", "pages/"]
    }
  }
}
